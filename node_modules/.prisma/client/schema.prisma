generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user_sequences {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  user_id       String @unique @map("user_id")
  last_sequence Int    @default(0) @map("last_sequence")

  @@map("user_sequences")
}

model chats {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  user_id       String          @map("user_id")
  chat_sequence Int             @map("chat_sequence")
  chat_id       String          @map("chat_id")
  title         String?
  created_at    DateTime        @default(now()) @map("created_at")
  updated_at    DateTime        @updatedAt @map("updated_at")
  messages      chat_messages[]

  @@unique([user_id, chat_sequence])
  @@map("chats")
}

model chat_messages {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id   String   @map("user_id")
  role      String
  content   String
  timestamp DateTime @default(now())
  chat_id   String   @db.ObjectId
  chat      chats    @relation(fields: [chat_id], references: [id])

  @@map("chat_messages")
}

model global_chats {
  id            String                 @id @default(auto()) @map("_id") @db.ObjectId
  chat_sequence Int                    @map("chat_sequence")
  chat_id       String                 @map("chat_id")
  creator_id    String                 @map("creator_id")
  title         String?
  created_at    DateTime               @default(now()) @map("created_at")
  updated_at    DateTime               @updatedAt @map("updated_at")
  messages      global_chat_messages[]

  @@map("global_chats")
}

model global_chat_messages {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  user_id   String       @map("user_id")
  name      String?
  role      String
  content   String
  timestamp DateTime     @default(now())
  chat_id   String       @db.ObjectId
  chat      global_chats @relation(fields: [chat_id], references: [id])

  @@map("global_chat_messages")
}

model settings {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  key   String  @unique
  value String?

  @@map("settings")
}

model users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  password  String
  username  String   @unique
  role      String   @default("USER")
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())

  @@map("users")
}

model bookmarks {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  guildId          String
  channelId        String
  messageId        String
  messageLink      String
  content          String
  attachments      String[]
  originalUserId   String
  originalUsername String
  savedByUserId    String
  savedByUsername  String
  tags             String[]
  createdAt        DateTime @default(now())

  @@map("bookmarks")
}

// ========== CHESS GAME ==========
model chess_games {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  guildId         String   @map("guild_id")
  channelId       String   @map("channel_id")
  whitePlayerId   String   @map("white_player_id")
  whitePlayerName String   @map("white_player_name")
  blackPlayerId   String   @map("black_player_id")
  blackPlayerName String   @map("black_player_name")
  isAiGame        Boolean  @default(false) @map("is_ai_game")
  board           String
  currentTurn     String   @default("white") @map("current_turn")
  moves           String[]
  status          String   @default("pending")
  winner          String?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("chess_games")
}

// ========== GAME WALLET (Ví xu chung cho các game) ==========
model game_wallets {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  odId        String   @unique @map("od_id") // odId-guildId
  odName      String   @map("od_name") // discord username
  odguildId   String   @map("od_guild_id")
  coins       Int      @default(1000) // Xu ban đầu
  totalWon    Int      @default(0) @map("total_won")
  totalLost   Int      @default(0) @map("total_lost")
  gamesPlayed Int      @default(0) @map("games_played")
  gamesWon    Int      @default(0) @map("games_won")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("game_wallets")
}

// ========== BA CAO GAMES (Lịch sử ván đấu) ==========
model bacao_games {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  guildId    String   @map("guild_id")
  channelId  String   @map("channel_id")
  hostId     String   @map("host_id")
  hostName   String   @map("host_name")
  betAmount  Int      @map("bet_amount")
  players    Json // Array of player data with hands
  winnerId   String?  @map("winner_id")
  winnerName String?  @map("winner_name")
  winnerHand String?  @map("winner_hand") // e.g., "LIEN", "SAP", "9"
  totalPot   Int      @map("total_pot")
  status     String   @default("finished")
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("bacao_games")
}

// ========== BA CAO LEADERBOARD ==========
model bacao_stats {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  odId           String   @unique @map("od_id") // odId-guildId
  odName         String   @map("od_name")
  odguildId      String   @map("od_guild_id")
  totalGames     Int      @default(0) @map("total_games")
  totalWins      Int      @default(0) @map("total_wins")
  totalLosses    Int      @default(0) @map("total_losses")
  totalCoinsWon  Int      @default(0) @map("total_coins_won")
  totalCoinsLost Int      @default(0) @map("total_coins_lost")
  lienCount      Int      @default(0) @map("lien_count")
  sapCount       Int      @default(0) @map("sap_count")
  bachThuCount   Int      @default(0) @map("bach_thu_count")
  highestWin     Int      @default(0) @map("highest_win")
  currentStreak  Int      @default(0) @map("current_streak")
  bestStreak     Int      @default(0) @map("best_streak")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("bacao_stats")
}
